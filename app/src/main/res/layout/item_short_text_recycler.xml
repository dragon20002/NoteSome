<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.haruu.notesome.model.ShortText" />

        <import type="com.haruu.notesome.adapter.ShortTextRecyclerAdapter" />

        <variable
            name="selected"
            type="Boolean" />

        <variable
            name="shortText"
            type="ShortText" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_margin"
        app:cardCornerRadius="@dimen/cardview_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_horizontal_margin"
                android:checked="@{safeUnbox(selected)}" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_horizontal_margin"
                android:padding="12dp"
                android:text="@{shortText.title}"
                android:textIsSelectable="true"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
